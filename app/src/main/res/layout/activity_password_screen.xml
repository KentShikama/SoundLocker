<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PasswordScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="@string/siteName"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/chooseSong"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:onClick="showSongPicker"
        android:text="@string/chooseSong"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/passwordLength"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/chooseSong"
        android:layout_below="@+id/chooseSong"
        android:layout_gravity="center|bottom"
        android:layout_weight="1"
        android:hint="@string/pwLength"
        android:inputType="number"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/genPass"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:onClick="displayPassword"
        android:text="@string/generate"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/copy"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_below="@+id/genPass"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="copyToClipboard"
        android:text="@string/copy" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_below="@+id/copy"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="openWebView"
        android:text="@string/webview" />

</LinearLayout>
